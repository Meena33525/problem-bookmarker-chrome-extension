{
  "manifest_version": 3,
  "name": "To Do Problem",
  "version": "0.1",
  "author": "Meenakshi IC",
  "description": "A Chrome Extension that helps you create a To-Do list of problems",
  "permissions": [
  "storage",
  "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
 "web_accessible_resources" : [
  {
    "resources": [
      "assets/bookmark.png",
      "assets/play.png",
      "assets/delete.png"
    ],
    "matches" : ["<all_urls>"]
  }
],
 "action": {
  "default_icon": {
    "16" : "assets/ext-icon.png",
    "24" : "assets/ext-icon.png",
    "32" : "assets/ext-icon.png"
  },
  "default_popup": "popup.html",
  "default_title": "To do problem tracker"
}
}
